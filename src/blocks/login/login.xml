<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <h2>Login</h2>
    <form id="formLogin" name="formLogin"
          class="pure-form pure-form-stacked"
          action="/login">
        <input type="text" name="login" placeholder="{json.texts.login}"/>
        <input type="password" name="password" placeholder="{json.texts.password}"/>
        <button type="submit" name="submit" class="pure-button pure-button-primary">Sign in</button>
    </form>
</fest:template>